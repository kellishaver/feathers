@import 'mixins';

.button {
  border:1px solid darken(<%= Feathers::Config.light %>, 30%);
  display:inline-block;
  font-weight:bold;
  line-height:1.5em;
  padding:0.25em 0.5em;
  text-align:center;
  @include background-gradient(lighten(<%= Feathers::Config.light %>, 10%), <%= Feathers::Config.light %>);
  @include border-radius(0.25em);
  i {
    margin-right:0.5em;
  }
  i.icon-empty {
    display:inline-block;
    height:0.75em;
    width:0.75em;
    border:1px solid <%= Feathers::Config.dark %>;
  }
}

.button:active {
  @include box-shadow(0, 0, 0);
}

.button:hover {
  color:<%= Feathers::Config.white %>;
  @include background-gradient(darken(<%= Feathers::Config.light %>, 10%), darken(<%= Feathers::Config.light %>, 20%));
  i {
    color:<%= Feathers::Config.white %>;
  }
}

.button.cancel {
  border:1px solid darken(<%= Feathers::Config.light %>, 30%);
  @include background-gradient(<%= Feathers::Config.light %>, darken(<%= Feathers::Config.light %>, 10%));
}

.button.cancel:hover {
  color:<%= Feathers::Config.white %>;
  @include background-gradient(darken(<%= Feathers::Config.light %>, 20%), darken(<%= Feathers::Config.light %>, 30%));
  i {
    color:<%= Feathers::Config.white %>;
  }
}

.button.delete {
  border:1px solid darken(<%= Feathers::Config.danger_element %>, 30%);
  color:<%= Feathers::Config.white %>;
  @include background-gradient(lighten(<%= Feathers::Config.danger_element %>, 10%), <%= Feathers::Config.danger_element %>);
  i {
    color:<%= Feathers::Config.white %>;
  }
  i.icon-empty {
    border:1px solid #fff;
  }
}

.button.delete:hover {
  @include background-gradient(darken(<%= Feathers::Config.danger_element %>, 10%), darken(<%= Feathers::Config.danger_element %>, 20%));
}

.button.large {
  font-size:125%;
}

.button.small {
  font-size:80%;
}

.button.action {
